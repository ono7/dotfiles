[gpg]
    program = gpg

[commit]
    gpgsign = true
	verbose = true

[tag]
    gpgsign = true
    sort = -taggerdate

[core]
    editor = nvim
    mergeoptions = --no-edit
    pager = delta
    hookspath = ~/.git_global/hooks
    compression = 9
    whitespace = error
    preloadindex = true
    untrackedCache = true
    excludesfile = ~/.gitignore_global

[pull]
    ff = only         # never auto-merge on pull
    rebase = true     # always rebase instead of merge
    autostash = true  # stash before rebase automatically

[rebase]
    autostash = true
    autosquash = true
    updateRefs = true
    missingCommitCheck = warn

[fetch]
    prune = true
    prunetags = true
    fsckobjects = true

[transfer]
    fsckobjects = true

[receive]
    fsckobjects = true

[branch]
    sort = -committerdate

[merge]
    tool = vimdiff
    prompt = false
    conflictstyle = zdiff3   # best conflict view

[mergetool "vimdiff"]
    cmd = vim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[mergetool]
    keepBackup = false
    prompt = false

[push]
    autoSetupRemote = true
    default = current
    followTags = true

[diff]
    colorMoved = default
    algorithm = patience
    context = 4
    renames = copies
    interHunkContext = 10

[color]
    ui = auto

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    wt = worktree
    unstage = reset HEAD --
    last = log -1 HEAD
    dv = "! args=$@; shift $#; nvim -c \"DiffviewOpen $args\""
    update-hooks = "!cp -R ~/.git_templates/hooks/. .git/hooks/ && chmod +x .git/hooks/*"
    whatadded = log --diff-filter=A

[log]
    follow = true

[interactive]
    diffFilter = delta --color-only
    singleKey = true

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all
    submoduleSummary = true

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    dark = true

    blame-palette = "#191828 #1e1d2d #2d2c3c #363545 #3e3d4d"

    commit-decoration-style = none
    file-decoration-style = none
    file-style = "#E3DED7" bold
    hunk-header-decoration-style = none
    hunk-header-file-style = "#E3DED7" bold
    hunk-header-line-number-style = "#A6B0C3" bold
    hunk-header-style = file line-number syntax

    line-numbers-left-style = "#3A4057"
    line-numbers-right-style = "#3A4057"
    line-numbers-zero-style = "#3A4057"

    line-numbers-minus-style = "#C49A9A" bold
    line-numbers-plus-style = "#8CBBAD" bold

    minus-style = "#C49A9A"
    plus-style = "#8CBBAD"

    minus-emph-style = "#1e1d2d" "#D4B97E"
    plus-emph-style = "#1e1d2d" "#D4B97E"

    minus-empty-line-marker-style = "#C49A9A"
    plus-empty-line-marker-style = "#8CBBAD"

    word-diff-regex = "[^[:space:]]+"

    whitespace-error-style = "#D4B97E" reverse

    line-numbers-left-format = "{nm:>4}â”‚"
    line-numbers-right-format = "{np:>4}â”‚"

    map-styles = \
        bold purple => "#B097B6", \
        bold blue => "#8CA7BE", \
        bold cyan => "#93B5B3", \
        bold yellow => "#D4B97E", \
        bold green => "#8CBBAD", \
        bold red => "#C49A9A"

[rerere]
    enabled = true
